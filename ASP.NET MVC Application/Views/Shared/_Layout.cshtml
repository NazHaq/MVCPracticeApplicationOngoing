<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hobby Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               <!-- @Html.ActionLink("Nazmul's Personal Webpage", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })-->
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "homepageLink" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { id = "aboutpageLink" })</li>
                    <li>@Html.ActionLink("Contact Details", "Contact", "Home", routeValues: null, htmlAttributes: new { id = "contactpageLink" })</li>
                    <li>@Html.ActionLink("Tutors", "Index", "Client", routeValues: null, htmlAttributes: new { id = "clientpageLink" })</li>
                    <li>@Html.ActionLink("Subscriptions", "Index", "Naz", routeValues: null, htmlAttributes: new { id = "subscriptionpageLink" })</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Future Students <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">

                            <li>@Html.ActionLink("List of students", "Index", "Students", routeValues: null, htmlAttributes: new { id = "homepageLink" })</li>
                            <li>@Html.ActionLink("List of courses", "Index", "Courses", routeValues: null, htmlAttributes: new { id = "aboutpageLink" })</li>
                            <li>@Html.ActionLink("List of enrollments", "Index", "Enrollments", routeValues: null, htmlAttributes: new { id = "contactpageLink" })</li>
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                            <li class="divider"></li>
                            <li><a href="#">One more separated link</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>

                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Nazmul's Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/myscript.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
